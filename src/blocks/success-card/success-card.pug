.success-card-wrapper(data-success-card-wrapper)
    .success-card.container(data-success-card)
        .success-card__row.row
            .success-card__header.col-md-6
                .success-header
                    .success-header__icon
                        .zmdi.zmdi-check
                    .success-header__text Product successfully added to your shopping cart

                    .success-header__img-wrapper
                        img.success-header__img(src="./assets/img/placeholder/noimage.png" data-success-card-img)
                    .success-header__title(data-success-card-title) Organics Thickening Shampoo
                    .success-header__info
                        .success-header__info-elem(data-success-card-size) Size: 125ml
                        .success-header__info-elem(data-success-card-skin) Skin type: oily
                    .success-header__bottom
                        .success-result
                            .success-result__string
                                .success-result__string-text Quantity 
                                .success-result__string-value(data-success-card-quantity) 1
                            .success-result__string
                                .success-result__string-text Total:
                                .success-result__string-value(data-success-card-price) $7,68

            .success-card__main.col-md-6
                .success-main
                    .success-main__icon
                        .zmdi.zmdi-shopping-cart
                    .success-main__text
                        span There is 
                        span(data-sussec-card-cart-length) 1 
                        span  item in your cart.
                    .success-main__result.success-result
                        .success-result__string
                            .success-result__string-text SUBTOTAL
                            .success-result__string-value 
                                span(data-amount-summ) 55.80
                                span(data-amount-currency) $
                        .success-result__string
                            .success-result__string-text SHIPPING
                            .success-result__string-value FREE
                        .success-result__string
                            .success-result__string-text TAXES
                            .success-result__string-value 
                                span(data-amount-tax) 2.23
                                span(data-amount-currency) $
                        .success-result__string
                            .success-result__string-text TOTAL (TAX EXCL.)
                            .success-result__string-value 
                                span(data-amount-total) 55.80
                                span(data-amount-currency) $
                    
                    .success-main__buttons
                        .success-main__button-item
                            +button({
                                text: "Continue shopping",
                                icon: false,
                                color: "tertiary"
                                })(data-success-card-close)
                        .success-main__button-item
                            +button({
                                href:'cart.html',
                                text: "Proceed to checkout",
                                icon: false,
                                color: "secondary"
                                })(data-success-card-to-cart)
        .success-card__close(data-success-card-close)
            i.zmdi.zmdi-close