.profile.container
    .row
        .profile__title.col-12 Profile
        form.profile__form.col-md-8.col-lg-7.col-xl-6(data-form)
            .profile__field
                .profile__label Name
                +input('Enter your name', 'name', 'text')(data-form-input readonly).input--readonly
            .profile__field
                .profile__label Email
                +input('Enter your email', 'email', 'email')(data-form-input readonly).input--readonly
            .profile__field
                .profile__label Phone number
                +input('Enter you phone number', 'phone', 'number')(data-form-input readonly).input--readonly
            .profile__field
                .profile__label Password
                +input('Enter password', 'password', 'password')(data-form-input readonly).input--readonly
            .profile__bottom
                .profile__button
                    +button({
                        color: 'primary',
                        text: 'Edit',
                        type: 'submit'
                    })(data-submit-button)
                .profile__button
                    +button({
                        color: 'tertiary',
                        text: 'Logout',
                        href: 'login.html'
                    })(data-logout-button)