.cart-total.container
    .cart-total__result
        .cart-total__string
            .cart-total__string-text 3 ITEMS
            .cart-total__string-value
                span(data-amount-summ) 55.80
                span(data-amount-currency) $
        .cart-total__string
            .cart-total__string-text SHIPPING
            .cart-total__string-value FREE
        .cart-total__string
            .cart-total__string-text TAXES
            .cart-total__string-value
                span(data-amount-tax) 2.40
                span(data-amount-currency) $
        .cart-total__string.cart-total__string--total
            .cart-total__string-text TOTAL (TAX EXCL.)
            .cart-total__string-value 
                span(data-amount-total) 55.80
                span(data-amount-currency) $
        
    .cart-total__buttons
        .cart-total__button
            +button({
                color: "tertiary",
                text: "Continue shopping",
                href: "index.html"
                })
        .cart-total__button
            +button({
                color: "secondary",
                text: "Proceed to checkout",
                href: "order.html"
            })(data-order-link)
