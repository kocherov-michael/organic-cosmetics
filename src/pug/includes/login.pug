.login.container
    .row
        .login__title.col-12 Login to account
        form.login__form.col-md-8.col-lg-7.col-xl-6(data-form)
            .login__field
                .login__label Email
                +input('Enter your email', 'email', 'email')(data-form-input)
            .login__field
                .login__label Password
                +input('Enter password', 'password', 'password')(data-form-input)
            .login__button
                .login__button-item
                    +button({
                        color: 'primary',
                        text: 'Log in',
                        type: 'submit'
                    })
                .login__button-item
                    +button({
                        color: 'tertiary',
                        text: 'Registration',
                        href: 'registration.html'
                    })
